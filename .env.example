# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Application Configuration
VITE_APP_NAME=MTI Portal
VITE_API_URL=http://localhost:5000/api

# eCitizen Payment Integration
VITE_ECITIZEN_API_URL=your_ecitizen_api_url
VITE_ECITIZEN_MERCHANT_ID=your_merchant_id
VITE_ECITIZEN_API_KEY=your_api_key

# Development Settings
VITE_SKIP_PREFLIGHT_CHECK=true
VITE_TSC_COMPILE_ON_ERROR=true
VITE_DISABLE_ESLINT_PLUGIN=true
VITE_GENERATE_SOURCEMAP=false
VITE_NODE_ENV=development
VITE_PORT=3000

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_AUDIT_LOGS=true

# File Upload Limits
VITE_MAX_FILE_SIZE=10485760 # 10MB
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png